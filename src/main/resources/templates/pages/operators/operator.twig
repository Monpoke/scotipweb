{% extends "../../layouts/base" %}

{% block title %}
    Directory
{% endblock %}
{% block pageHeader %}
    Switchboards Directory
{% endblock %}

{% block breadcrumb %}
    <li><a href="/u/operator/{{ currentCompany.id }}">Operator</a></li>
{% endblock %}


{% block pageContent %}

    <form class="form-inline" action = "/u/newOperator" method="post" >
        <div class="form-group">
            <input type="text" class="form-control" name="name" id="name" placeholder="Name" value="{{ operator.name }}">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password" value="{{ operator.password }}">
        </div>

        {% set token = request.attribute('_csrf') %}
        <input type="hidden" name="{{ token.parameterName }}" value="{{ token.token }}"/>

        <button type="submit" class="btn btn-default">Register</button>
    </form>


    <table id="directory" class="table table-striped">
        <tr>
            <th width = "100">Operator ID</th>
            <th>Name</th>
            <th>password</th>
            <th>delete</th>
        </tr>

        {% for operator in list %}
            <tr>
                <td>{{ operator.oid }}</td>
                <td>{{ operator.name }} </td>
                <td>{{ operator.password }} </td>
                <td>
                    <a href="/u/delOperator/{{ operator.oid }}" class="btn btn-danger">
                        Del
                    </a>
                </td>
            </tr>
        {% endfor %}

    </table>


{% endblock %}