{% extends "../../layouts/base" %}

{% block title %}
    Registration
{% endblock %}
{% block pageHeader %}
    Registration
{% endblock %}

{% block breadcrumb %}
    <li><a href="/login">Registration</a></li>
{% endblock %}


{% block pageContent %}

    <div id="mainWrapper">
        <div class="login-container">
            <div class="login-card">
                <div class="login-form">
                    <form action="/register" method="post" class="form-horizontal">

                        {% if hasErrors('company') %}
                            <div class="alert alert-danger">
                                <p>
                                    {% for err in getAllErrors('company') %}
                                        {{ err }}<br/>
                                    {% endfor %}
                                </p>
                            </div>

                        {% endif %}

                        {% set token = request.attribute('_csrf') %}

                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="name"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="name" name="name"
                                   placeholder="Enter company name" value="{{ company.name }}">
                        </div>

                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="address"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="address" name="address"
                                   placeholder="Enter company address" value="{{ company.address }}">
                        </div>

                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="address2"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="address2" name="address2"
                                   placeholder="address2" value="{{ company.address2 }}">
                        </div>

                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="postcode"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="postcode" name="postcode"
                                   placeholder="Enter company postal Code" value="{{ company.postcode }}">
                        </div>


                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="city"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="city" name="city"
                                   placeholder="Enter company city" value="{{ company.city }}">
                        </div>

                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="country"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="country" name="country"
                                   placeholder="Enter company country" value="{{ company.country }}">
                        </div>

                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="phoneNumber"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"
                                   placeholder="Enter a company phoneNumber" value="{{ company.phoneNumber }}">
                        </div>

                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="ContactName"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="ContactName" name="ContactName"
                                   placeholder="Enter a company ContactName" value="{{ company.ContactName }}">
                        </div>


                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="ContactPhone"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="ContactPhone" name="ContactPhone"
                                   placeholder="Enter a company ContactPhone" value="{{ company.ContactPhone }}">
                        </div>

                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="ContactMail"><i class="fa fa-user"></i></label>
                            <input type="email" class="form-control" id="ContactMail" name="ContactMail"
                                   placeholder="Enter a company ContactMail" value="{{ company.ContactMail }}">
                        </div>


                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="password"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="password" name="password"
                                   placeholder="Enter a password">
                        </div>


                        <div class="input-group input-sm">
                            <label class="input-group-addon" for="matchingPassword"><i class="fa fa-user"></i></label>
                            <input type="text" class="form-control" id="matchingPassword" name="matchingPassword"
                                   placeholder="Confirm password">
                        </div>


                        <input type="hidden" name="{{ token.parameterName }}" value="{{ token.token }}"/>

                        <div class="form-actions">
                            <input type="submit"
                                   class="btn btn-block btn-primary btn-default" value="Register">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}