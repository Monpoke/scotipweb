{% extends "../switchboard/layoutSwitch" %}

{% block title %}
    MOH
{% endblock %}

{% block pageHeader %}
    Music on Hold
    <small>{{ switchboard.name }}</small>
{% endblock %}

{% block breadcrumb %}
    <li><a href="/u/switchboard">Switchboard</a></li>
    <li class="active"><a href="#">MOH</a></li>
{% endblock %}

{% block pageContent %}


    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Group <em>{{ group.name }}</em></h3>

                </div><!-- /.box-header -->
                <div class="box-body">

                    <table class="table table-responsive">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                        </thead>

                        <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                        </tfoot>

                        <tbody>
                        {% for file in mohFiles %}
                            <tr>
                                <td>{{ group.groupId }}</td>
                                <td><a href="./moh/{{ group.soundId }}">{{ group.name }}</a></td>
                                <td>
                                    <a href="./moh/{{ group.soundId }}" class="btn btn-primary">
                                        View
                                    </a>
                                    <a href="./moh/{{ group.soundId }}/delete" class="btn btn-danger" onclick="return(confirm('Remove this group?'));">
                                        X
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3"><em>No group yet</em></td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                    <br/>
                    <a href="./moh/add" class="btn btn-success">
                        <i class="fa fa-plus-circle"></i> Add new group
                    </a>

                </div><!-- ./box-body -->


            </div><!-- /.box -->
        </div><!-- /.col -->


    </div><!-- /.row -->


{% endblock %}
